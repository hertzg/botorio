{
  "name": "botorio",
  "version": "1.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:hertzg/botorio.git"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
    "pm2-start": "pm2 startOrRestart ecosystem.config.js",
    "prettier": "prettier",
    "update": "git pull && rm -rf node_modules/ build/ && npm ci && npm run build && npm run pm2-start"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "digitalocean-js": "^1.4.2",
    "discord.js": "^11.4.2",
    "lodash": "^4.17.11",
    "rcon-ts": "^1.2.3",
    "yaml": "^1.4.0",
    "minimist": "^1.2.0",
    "lodash-ts": "^1.2.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/debug": "^4.1.2",
    "@types/minimist": "^1.2.0",
    "@types/node": "^11.13.0",
    "@types/yaml": "^1.0.2",
    "cross-env": "^5.2.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  }
}
